VkResult vkAllocateCommandBuffers(                                  VkResult vkResetCommandBuffer(
    VkDevice                            device,                         VkCommandBuffer            commandBuffer,
    const VkCommandBufferAllocateInfo*  pAllocateInfo,                  VkCommandBufferResetFlags  flags);
    VkCommandBuffer*                    pCommandBuffers);
                                                                        typedef enum VkCommandBufferResetFlagBits {
    typedef struct VkCommandBufferAllocateInfo {                            VK_COMMAND_BUFFER_RESET_RELEASE_RESOURCES_BIT = 0x00000001,
        VkCommandPool           commandPool;                            }
        VkCommandBufferLevel    level;
        uint32_t                commandBufferCount;
    }                                                               void vkFreeCommandBuffers(
                                                                        VkDevice                device,
    enum VkCommandBufferLevel {                                         VkCommandPool           commandPool,
        VK_COMMAND_BUFFER_LEVEL_PRIMARY,                                uint32_t                commandBufferCount,
        VK_COMMAND_BUFFER_LEVEL_SECONDARY,                              const VkCommandBuffer*  pCommandBuffers);
    }

VkResult vkBeginCommandBuffer(
        VkCommandBuffer                  commandBuffer,
        const VkCommandBufferBeginInfo*  pBeginInfo);               typedef struct VkCommandBufferInheritanceInfo {
                                                                        VkRenderPass                     renderPass;
    typedef struct VkCommandBufferBeginInfo {                           uint32_t                         subpass;
        VkCommandBufferUsageFlags               flags;                  VkFramebuffer                    framebuffer;
        const VkCommandBufferInheritanceInfo*   pInheritanceInfo;       VkBool32                         occlusionQueryEnable;
    }                                                                   VkQueryControlFlags              queryFlags;
                                                                        VkQueryPipelineStatisticFlags    pipelineStatistics;
    typedef enum VkCommandBufferUsageFlagBits {                     }
        VK_COMMAND_BUFFER_USAGE_ONE_TIME_SUBMIT_BIT,
        VK_COMMAND_BUFFER_USAGE_RENDER_PASS_CONTINUE_BIT,           VkResult vkEndCommandBuffer(VkCommandBuffer   commandBuffer);
        VK_COMMAND_BUFFER_USAGE_SIMULTANEOUS_USE_BIT,
    }

void vkCmdExecuteCommands(
    VkCommandBuffer          commandBuffer,
    uint32_t                 commandBufferCount,
    const VkCommandBuffer*   pCommandBuffers);


